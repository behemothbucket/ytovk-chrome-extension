{
  "env": {
    "webextensions": true,
    "browser": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "semi": [
      "error",
      "always"
    ],
    "object-curly-spacing": [
      "error",
      "always"
    ],
    "no-unused-vars": "warn",
    "quotes": [
      "error",
      "double"
    ]
  }
}
